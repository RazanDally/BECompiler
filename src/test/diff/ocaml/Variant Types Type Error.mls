(*This benchmark tests the algorithm's ability to handle variant types and detect a type error when an incompatible type is used in the construction or pattern matching of a variant type*)

type expr =
  | Const of int
  | Add of expr * expr
  | Bool of bool
//│ /!\ Parse error: Expected (ocamlConstructorDecl.rep(1) | (("(" | Index ~ tyName | Index ~ ocamlTyParam).rep(1) | "(").rep(1)):2:3, found "| Const of" at l.4:3:   | Const of int

let eval expr =
  match expr with
  | Const n -> n
  | Add (e1, e2) -> eval e1 + eval e2
  | Bool b -> if b then 1 else 0 ;;
